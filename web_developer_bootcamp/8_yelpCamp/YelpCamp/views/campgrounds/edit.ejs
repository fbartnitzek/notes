<% include ../partials/header %>
<div class="container">

    <h1 style="text-align: center">Edit <%= campground.name %></h1>
    <div style="width: 40%; margin: 30px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input name="campground[name]" type="text" class="form-control" id="name" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input name="campground[price]" type="number" class="form-control" id="price" value="<%= campground.price %>" min="0.00" step="0.01">
            </div>
            <div class="form-group">
                <input name="campground[image]" type="text" class="form-control" id="image" value="<%= campground.image %>">
                <small id="imageHelp" class="form-text text-muted">Insert the link to an image of the campground here.</small>
            </div>
            <div class="form-group">
                <input name="campground[description]" type="text" class="form-control" id="description" value="<%= campground.description %>">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
        <a href="/campgrounds">Go back</a>
    </div>

</div>
<% include ../partials/footer %>