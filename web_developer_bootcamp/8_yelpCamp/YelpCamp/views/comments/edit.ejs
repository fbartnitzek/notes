<% include ../partials/header %>
<div class="container">

    <h1 style="text-align: center">Edit Comment</h1>
    <div style="width: 40%; margin: 30px auto;">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input name="comment[text]" type="text" class="form-control" value="<%= comment.text %>">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Update</button>
        </form>
        <a href="/campgrounds">Go back</a>
    </div>

</div>
<% include ../partials/footer %>